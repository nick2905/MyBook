<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.proyek.mamikos.mybook">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.detailPenulis.DetailPenulis"
            android:theme="@style/Theme.Design.NoActionBar" />
        <activity android:name=".ui.newbook.BukuBaruActivity"
            android:theme="@style/Theme.Design.NoActionBar"/>
        <activity
            android:name=".ui.detailBook.DetailBookActivity"
            android:theme="@style/Theme.Design.NoActionBar" />
        <activity
            android:name=".ui.detailCategory.DetailGenreActivity"
            android:theme="@style/Theme.Design.NoActionBar" />
        <activity
            android:name=".ui.genre.MainActivity"
            android:theme="@style/Theme.Design.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>